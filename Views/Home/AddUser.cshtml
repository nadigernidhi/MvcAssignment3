@model AspAssignment11.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddUser</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("SaveUser", "Home"))
        {
            <p>
                User Name: @Html.TextBoxFor(user => user.UserName)
            </p>

            <p>
                Password: @Html.PasswordFor(user => user.Password)
            </p>

            <input type="submit" value="Add User" />
        }

    </div>
</body>
</html>
